<h1>Mesas</h1>
<br/>
<ul class="breadcrumb">
  <li >
   <%=link_to 'Mesas',tables_path%> <span class="divider">/</span>
  </li>
  <li class='active'>
   <%=link_to 'Cuentas',bills_path%> <span class="divider">/</span>
  </li>
  
</ul>

<table class="table table-condensed">
  <thead>
    <tr>
     
      <th>Nombre</th>
      <th>Cuenta</th>
      <th>Estado</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tables.each do |table| %>
      <tr>
       
        <td><%= table.name%></td>
      
      <td>
      	<%if table.bill.nil?%>
          <%=link_to new_bill_path(:id=>table),:class=>'btn' do %>
     	  <i class="icon-plus "></i> Abrir cuenta<% end %>
      	<%else%>
      	   <%=link_to bill_path(table.bill),:class=>'btn' do %>
     	  <i class="icon-eye-open "></i>    Ver cuenta<% end %>
      	<%end%>
      </td>
      
      <td>
        <%if !table.bill.nil?%>
 		<%if table.bill.status==false%><span class="label label-important">Pendiente</span>
 		<%else%><span class="label label-success">Pagada</span><%end%>
	    <%end%>
	  </td>
      
        <td>
          <%= link_to 'Editar', edit_table_path(table), :class => 'btn' %>
          <%= link_to 'Borrar', table_path(table), :method => :delete, :confirm => 'Â¿Seguro? NO se puede deshacer', :class => 'btn  btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nueva mesa', new_table_path, :class => 'btn btn-primary btn-large' %>
