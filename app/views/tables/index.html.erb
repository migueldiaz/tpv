<h1>Mesas</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
     
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= table.id %></td>
        <td><%= link_to table.name, table_path(table) ,:class=>'btn btn-success'%></td>
      
        <td>
          <%= link_to 'Editar', edit_table_path(table), :class => 'btn' %>
          <%= link_to 'Borrar', table_path(table), :method => :delete, :confirm => 'Â¿Seguro? NO se puede deshacer', :class => 'btn  btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_table_path, :class => 'btn btn-primary' %>
