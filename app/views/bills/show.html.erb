<ul class="breadcrumb">
   <li >
   <%=link_to 'Mesas',tables_path%> <span class="divider">/</span>
  </li>
   <li >
   <%=link_to @bill.table.name,table_path(@bill.table)%> <span class="divider">/</span>
  </li>
  <li >
 
<li class="active">
      <%=link_to 'Cuenta'%>
  </li>
  
</ul>
